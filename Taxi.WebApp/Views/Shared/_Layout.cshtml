@model Taxi.WebApp.Models.LayoutViewModel
@using Taxi.Entities.Helpers;
<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Taxi</title>
	@Styles.Render("~/bundles/css/libs/")
	@Styles.Render("~/bundles/css/commons/")

</head>
<body class="main-container">
	
	<div class="container">
		
		<header>
			<div class="navbar taxi-navbar">
				<ul class="nav navbar-nav main-menu taxi-nav">
					@*<li><a href="/">Главная</a></li>*@
					<li><a href="/">Заказ такси</a></li>
					<li><a href="/marrige/">Прокат свадебных машин</a></li>
					<li><a href="/medical/">Услуги спецтранспорта</a></li>
					<li><a href="/about/">О нас</a></li>
					<li><a href="/contacts/">Контакты</a></li>
				</ul>
				@Html.Partial("_LoginPartial")
			</div>
			<div>
				<h1>Служба такси</h1>
			</div>
		</header>
		<div class="container body-content">
			<div class="page_content jMainRegion">
				@RenderBody()
			</div>
			<hr />
			<footer>
				<p>&copy; @DateTime.Now.Year - free car for you 24/7</p>
			</footer>
		</div>
        <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBACHpzRVDnnjGMK9_pvbwCXE5-TOQGlMc&signed_in=true&libraries=places"
                async defer></script>

		<div class="jScripts">
			@Scripts.Render("~/bundles/libs")
			@Scripts.Render("~/bundles/pages")

			@RenderSection("Scripts", required: false)
		</div>
	</div>
	<footer>

	</footer>
</body>
</html>
