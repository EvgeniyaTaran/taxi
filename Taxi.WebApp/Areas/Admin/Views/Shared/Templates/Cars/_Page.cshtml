<script type="text/x-jsrender" class="jCarLayoutTmpl">
	<div>
		<h4>Автомобиль {{>ru.name}} {{>number}}</h4>
		<div class="container">
			<form class="form-horizontal" role="form">
				<div class="form-group">
					<label class="col-sm-2 control-label" for="id">ID</label>
					<input type="number" value="{{>id}}" name="id" class="jId" disabled />
				</div>

				<div class="form-group">
					<label class="col-sm-2 control-label" for="number">Номер</label>
					<input type="text" value="{{>number}}" name="number" />
				</div>

				<div class="form-group">
					<label class="col-sm-2 control-label" for="isActive">Активный</label>
					<input type="checkbox" name="isActive" {{if isActive}} checked {{/if}} />
				</div>

				<div class="form-group">
					<label class="col-sm-2 control-label" for="modelId">Бренд</label>
					<select class="jBrand" name="carBrandId">
						{{for getCarBrands() ~id=carModel.carBrandId}}
						<option value="{{>id}}" {{if ~id==id}} selected {{/if}}>{{>ru.name}}</option>
						{{/for}}
					</select>
				</div>

				<div class="form-group">
					<label class="col-sm-2 control-label" for="modelId">Модель авто</label>
					<select class="jModel" name="carModelId">
						{{for getCarModels() ~id=carModelId}}
							<option data-id="{{>id}}" data-brandId="{{>carBrandId}}" value="{{>id}}" {{if ~id==id}} selected {{/if}}>{{>ru.name}}</option>
						{{/for}}
					</select>
				</div>

				<div class="panel panel-primary">
					<div class="panel-heading">Ru</div>
					<div class="panel-body">
						<div class="form-group">
							<label class="col-sm-2 control-label" for="name">Название</label>
							<input type="text" value="{{>ru.name}}" data-complexname="ru.name" />
						</div>

						<div class="form-group">
							<label class="col-sm-2 control-label" for="num">Короткое название</label>
							<input type="text" value="{{>ru.shortName}}" data-complexname="ru.shortName" />
						</div>

						<div class="form-group">
							<label class="col-sm-2 control-label" for="num">Описание</label>
							<input type="text" value="{{>ru.description}}" data-complexname="ru.description" />
						</div>
					</div>
				</div>

				<div class="panel panel-success">
					<div class="panel-heading">En</div>
					<div class="panel-body">
						<div class="form-group">
							<label class="col-sm-2 control-label" for="name">Название</label>
							<input type="text" value="{{>en.name}}" data-complexname="en.name" />
						</div>

						<div class="form-group">
							<label class="col-sm-2 control-label" for="num">Короткое название</label>
							<input type="text" value="{{>en.shortName}}" data-complexname="en.shortName" />
						</div>

						<div class="form-group">
							<label class="col-sm-2 control-label" for="num">Описание</label>
							<input type="text" value="{{>en.description}}" data-complexname="en.description" />
						</div>
					</div>
				</div>

				<div class="form-group">
					<input type="button" class="btn btn-info jSave" value="Сохранить" />
				</div>
			</form>
		</div>
	</div>
</script>